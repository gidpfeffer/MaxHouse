<p id="notice"><%= notice %></p>

<h1><%= @user.first_name + " " + @user.last_name  + " Stats" %></h1>

<table>
  <tr>
    <th>Lift</th>
    <th>Pounds</th>
    <th>Reps</th>
  </tr>
	<% @user.stats.each do |stat| %>
	  <tr>
	    <td><%= stat.lift %></td>
	    <td><%= stat.pounds %></td>
	    <td><%= stat.reps %></td>
	    <td><%= link_to 'Edit', edit_stat_path(stat) %></td>
	    <td><%= link_to 'Show', stat_path(stat) %></td>
	    <td><%= link_to 'Delete', stat_path(stat), method: :delete, data: {confirm: 'are you sure?' } %></td>
	  </tr>
	<% end %> 

</table>

</br>

<%= link_to "+ Stats", new_stat_path(:user_info => { :user_id => @user.id }) %>

<%= link_to 'Back', users_path %>
